<!--
linkfile syntax:
"src" starts in "path" of the project and is the real file (target of the symlink)
"dest" starts in the root folder      and is the link name


#convert to relative symlinks:
rm Makefile     && ln -s projects/seL4doom/Makefile
rm Kbuild       && ln -s projects/seL4doom/Kbuild
rm Kconfig      && ln -s projects/seL4doom/Kconfig
rm configs      && ln -s projects/seL4doom/configs
rm grub.cfg     && ln -s projects/seL4doom/grub.cfg
rm libs/libsel4 && ln -s ../kernel/libsel4 ./libs
-->

